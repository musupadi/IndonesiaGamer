<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.destiny.indonesiagamer">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/gamer_indo_beta"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/gamer_indo_beta_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.IndonesiaGamer"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.ui.Game.TrailerGameActivity"
            android:theme="@style/AppThemeNoAction"></activity>
        <activity
            android:name=".Activity.ui.Game.DeskripsiGame"
            android:label="Deksripsi Game"
            android:parentActivityName=".Activity.ui.Game.ListGameActivity" />
        <activity
            android:name=".Activity.ui.Game.ListGameActivity"
            android:label="Game"
            android:parentActivityName=".Activity.MainActivity" />
        <activity
            android:name=".Activity.LoginActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity
            android:name=".Activity.SplashActivity"
            android:theme="@style/AppThemeNoAction" />
        <activity android:name=".Activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>