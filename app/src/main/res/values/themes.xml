<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IndonesiaGamer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Secondary</item>
        <item name="colorPrimaryVariant">@color/PrimaryVariant</item>
        <item name="colorOnPrimary">@color/ColorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/Primary</item>
        <item name="colorSecondaryVariant">@color/SecondaryVariant</item>
        <item name="colorOnSecondary">@color/Secondary</item>
    </style>
    <style name="AppThemeNoAction" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Secondary</item>
        <item name="colorPrimaryDark">@color/SecondaryVariant</item>
        <item name="colorAccent">@color/Primary</item>
    </style>
    <style name="AppThemeDeskripsi" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorTransparent</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorTransparent</item>

        <item name="colorControlNormal">@color/Primary</item>
        <item name="colorControlActivated">@color/colorBlack</item>

        <!--        <item name="colorControlActivated">@color/colorOrange</item>-->
        <item name="colorSwitchThumbNormal">@color/colorGrey</item>
        <item name="android:colorForeground">@color/colorBlack</item>
    </style>
</resources>