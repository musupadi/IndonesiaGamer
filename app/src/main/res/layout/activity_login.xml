<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearAvailable">
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="286dp"
                            android:src="@color/Secondary"
                            android:scaleType="fitXY"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="286dp"
                            android:orientation="vertical"
                            android:gravity="center">
                            <RelativeLayout
                                android:layout_marginTop="30dp"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:elevation="10dp">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/round_white"/>
                                <com.airbnb.lottie.LottieAnimationView
                                    android:id="@+id/lottieHeader"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    app:lottie_loop="true"
                                    app:lottie_fileName="gamer_red.json"
                                    app:lottie_autoPlay="true"
                                    android:layout_centerInParent="true"/>
                            </RelativeLayout>
                            <TextView
                                android:layout_marginTop="10dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Indonesia Gamer"
                                android:textColor="@color/Primary"
                                android:layout_gravity="center"
                                android:textSize="30sp"
                                android:gravity="center"
                                android:fontFamily="@font/gotham"
                                android:layout_marginBottom="70dp"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginTop="210dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="10dp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:padding="10dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="4dp"
                                    app:cardCornerRadius="30dp"
                                    app:cardElevation="5dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">
                                        <RelativeLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_gravity="center">
                                            <LinearLayout
                                                android:elevation="5dp"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:orientation="vertical">
                                                <TextView
                                                    android:fontFamily="@font/gotham"
                                                    android:textColor="@color/Secondary"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:text="Login"
                                                    android:gravity="center"
                                                    android:layout_marginTop="20dp"
                                                    android:textStyle="bold"
                                                    android:textSize="30sp"/>
                                                <LinearLayout
                                                    android:layout_margin="10dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/btn_rounded_transparent"
                                                    android:padding="5dp">

                                                    <EditText
                                                        android:hint="Username"
                                                        android:textColor="@color/colorBlack"
                                                        android:id="@+id/etUsername"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:background="@drawable/btn_rounded"
                                                        android:padding="5dp"
                                                        android:fontFamily="@font/gotham"
                                                        android:theme="@style/AppThemeDeskripsi" />
                                                </LinearLayout>
                                                <LinearLayout
                                                    android:layout_margin="10dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/btn_rounded_transparent"
                                                    android:padding="5dp">

                                                    <EditText
                                                        android:inputType="textPassword"
                                                        android:hint="Password"
                                                        android:textColor="@color/colorBlack"
                                                        android:id="@+id/etPassword"
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:background="@drawable/btn_rounded"
                                                        android:padding="5dp"
                                                        android:fontFamily="@font/gotham"
                                                        android:theme="@style/AppThemeDeskripsi" />
                                                </LinearLayout>
                                                <TextView
                                                    android:layout_marginTop="15dp"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="Lupa Password ? "
                                                    android:layout_gravity="right"
                                                    android:layout_marginRight="10dp"
                                                    android:textColor="@color/Secondary"
                                                    android:id="@+id/tvForgotPassword"
                                                    android:fontFamily="@font/gotham"/>
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/round_red"
                                                    android:padding="10dp"
                                                    android:layout_marginTop="20dp"
                                                    android:layout_marginRight="50dp"
                                                    android:layout_marginLeft="50dp"
                                                    android:layout_marginBottom="20dp"
                                                    android:elevation="5dp"
                                                    android:id="@+id/linearLogin">
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="center"
                                                        android:textColor="@color/Primary"
                                                        android:text="Login"
                                                        android:fontFamily="@font/gotham"
                                                        android:textSize="@dimen/header_text"/>
                                                </LinearLayout>
                                                <LinearLayout
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:background="@drawable/round_red"
                                                    android:padding="10dp"
                                                    android:layout_marginRight="50dp"
                                                    android:layout_marginLeft="50dp"
                                                    android:layout_marginBottom="20dp"
                                                    android:elevation="5dp"
                                                    android:id="@+id/linearRegister">
                                                    <TextView
                                                        android:layout_width="match_parent"
                                                        android:layout_height="wrap_content"
                                                        android:gravity="center"
                                                        android:textColor="@color/Primary"
                                                        android:text="Register"
                                                        android:fontFamily="@font/gotham"
                                                        android:textSize="@dimen/header_text"/>
                                                </LinearLayout>

                                                <LinearLayout
                                                    android:visibility="gone"
                                                    android:layout_marginTop="20dp"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="wrap_content"
                                                    android:orientation="horizontal"
                                                    android:gravity="center"
                                                    android:layout_marginBottom="10dp">
                                                    <TextView
                                                        android:textSize="15sp"
                                                        android:gravity="center"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="Belum Punya Akun ? "/>
                                                    <TextView
                                                        android:fontFamily="@font/gotham"
                                                        android:id="@+id/tvRegister"
                                                        android:textStyle="bold"
                                                        android:textColor="@color/Primary"
                                                        android:textSize="15sp"
                                                        android:gravity="center"
                                                        android:layout_width="wrap_content"
                                                        android:layout_height="wrap_content"
                                                        android:text="Daftar"/>

                                                </LinearLayout>
                                            </LinearLayout>

                                        </RelativeLayout>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/linearLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">
        <com.airbnb.lottie.LottieAnimationView
            android:layout_weight="1"
            app:lottie_loop="true"
            app:lottie_fileName="world location.json"
            app:lottie_autoPlay="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </com.airbnb.lottie.LottieAnimationView>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:textSize="25sp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold"
            android:gravity="center|top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sedang Mencoba Login"/>
    </LinearLayout>
</RelativeLayout>